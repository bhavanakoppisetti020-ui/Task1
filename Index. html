    function checkRetirement() {
      const retirementAge = 65;
      const currentYear = new Date().getFullYear();
      const birthYearInput = document.getElementById('birthYear').value;
      const birthYear = parseInt(birthYearInput);
      
      if (!birthYear || birthYear > currentYear || birthYear < 1900) {
        document.getElementById('result').textContent = 'Please enter a valid birth year.';
        return;
